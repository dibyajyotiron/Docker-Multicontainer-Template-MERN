{
	"AWSEBDockerrunVersion": 2,
	"containerDefinitions": [
		{
			"name": "client",
			"image": "dibyajyoti/multi-container-client",
			"hostname": "client",
			"essential": false
		},
		{
			"name": "server",
			"image": "dibyajyoti/multi-container-server",
			"hostname": "api",
			"essential": false
		},
		{
			"name": "worker",
			"image": "dibyajyoti/multi-container-worker",
			"hostname": "worker",
			"essential": false
		},
		{
			"name": "nginx",
			"image": "dibyajyoti/multi-container-nginx",
			"hostname": "nginx",
			"essential": false,
			"portMappings": [
				{
					"hostPort": 80,
					"containerPort": 80
				}
			],
			"links": ["client", "server"]
		}
	]
}
